{
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.latex": "explicit",
    "source.latex.linting.chktex": "explicit"
  },
  "files.watcherExclude": {
    "out/**": true
  },
  // "latex-workshop.hover.citation.enabled": true,
  // "latex-workshop.hover.preview.cursor.enabled": true,
  // "latex-workshop.hover.preview.cursor.symbol": "\\!|\\!",
  // "latex-workshop.hover.preview.enabled": true,
  // "latex-workshop.hover.preview.newcommand.newcommandFile": "%DIR%/cv.tex",
  // "latex-workshop.hover.preview.newcommand.parseTeXFile.enabled": true,
  // "latex-workshop.intellisense.package.dirs": [
  //   "C:\\texlive\\2023\\texmf-dist",
  //   "C:\\texlive\\2023\\texmf-dist\\tex\\latex"
  // ],
  // "latex-workshop.intellisense.package.enabled": true,
  // "latex-workshop.intellisense.update.aggressive.enabled": true,
  // "latex-workshop.intellisense.update.delay": 0,
  // "latex-workshop.latex.autoBuild.run": "onFileChange",
  "latex-workshop.latex.outDir": "%DIR%/out",
  "latex-workshop.latex.texDirs": ["%DIR%/tex", "%DIR%/tex/sections"],
  "latex-workshop.latex.tools": [
    {
      "args": [
        "-xelatex",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-outdir=%OUTDIR%",
        "-file-line-error",
        "%DIR%/cv.tex"
      ],
      "command": "latexmk",
      "name": "latexmk"
    }
  ],
  "latex-workshop.linting.chktex.enabled": true,
  "latex-workshop.linting.run": "onType",
  // "latex-workshop.synctex.afterBuild.enabled": true,
  // "latex-workshop.view.autoFocus.enabled": true,
  // "latex-workshop.view.outline.commands": ["ref", "input", "usepackage"],
  // "latex-workshop.view.outline.follow.editor": true,
  // "latex-workshop.view.outline.sections": [
  //   "header",
  //   "summary",
  //   "education",
  //   "experience",
  //   "projects",
  //   "skills"
  // ],
  // "latex-workshop.view.pdf.viewer": "tab",
  "search.exclude": {
    "out": true
  },
  "vscode-color-picker.languages": ["tex"],
  "workbench.editorAssociations": {
    "*.pdf": "latex-workshop-pdf-hook"
  },
  "workbench.iconTheme": "material-icon-theme"
}
